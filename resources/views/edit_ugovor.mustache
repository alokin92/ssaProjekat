<html>
<head>
	<script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
	<script>
	$("#slideshow > div:gt(0)").hide();
	setInterval(function() { 
  	$('#slideshow > div:first')
    .fadeOut(1000)
    .next()
    .fadeIn(1000)
    .end()
    .appendTo('#slideshow');
},  3000);
	</script>
